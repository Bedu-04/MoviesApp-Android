        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="26sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:text="Sinopsis"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <TextView
                android:id="@+id/movie_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"

                android:lineSpacingExtra="12dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="26sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:text="@string/director_string"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/director_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/img_background"
                android:src="@drawable/call_of_duty"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/director_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Director"
                android:textAlignment="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="26sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:text="Elenco"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCinemaListing"
                layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                listitem="@layout/movies_catalog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/similar_movies"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:textSize="24sp"
            android:text="SIMILARES"
            android:textAlignment="center"
            android:textColor="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSimilarMovies"
            listitem="@layout/movies_catalog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>



</ScrollView>